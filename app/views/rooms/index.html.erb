
<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @rooms.each do |room| %>
    <tr>
      <td><%= room.title %></td>
      <td><%= room.text %></td>
      <td><%= link_to 'Show', room_path(room) %></td>
      <td><%= link_to 'Edit', edit_room_path(room) %></td>
      <td><%= link_to 'Destroy', room_path(room),
        method: :delete %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New room', new_room_path %>
